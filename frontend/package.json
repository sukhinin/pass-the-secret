{
  "name": "frontend",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:css": "tailwindcss -i src/tailwind.css -o src/styles.css --watch",
    "dev:parcel": "parcel serve src/styles.css src/*.html",
    "build": "npm-run-all clean build:css build:parcel",
    "build:css": "tailwindcss -i src/tailwind.css -o src/styles.css --minify",
    "build:parcel": "parcel build src/styles.css src/*.html",
    "clean": "rimraf dist .parcel-cache"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.4.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.7"
  }
}
